<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Grades App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Grades App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addSemester">Add new Semester</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Grades App</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Semester Name</th>
            <th width="100">Grade</th>
            <th width="50">Module Name</th>
            <th width="50">Cover Image</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < semesters.length; i++) { %>
          <tr>
            <td><a href="/semesters/<%=semesters[i].semesterId%>"><%= semesters[i].semestername %></a></td>
            <td><%= semesters[i].grade %></td>
            <td><%= semesters[i].modulename%>
              <td><img src="/images/<%=semesters[i].coverimage%>" width="20%"></td>
            <!--Edit Link-->
            <td><a href="/editSemester/<%= semesters[i].semesterId %>">Edit</a></td>
            <!--Delete Link-->
            <td><a href="/deleteSemester/<%=semesters[i].semesterId%>" onclick="return confirm('Are you sure you want to delete this semester?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
